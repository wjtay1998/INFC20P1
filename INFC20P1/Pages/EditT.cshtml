@page
@model INFC20P1.Pages.EditPModel
@{
}

<div class="px-4">
    <div class="text-center">
        <h1 class="display-4">PayTrack</h1>
    </div>

    <div class="row mx-5">
        @if (Model.successMessage != null)
        {
            <div class="alert alert-success d-flex align-items-center" role="alert">
                <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill" /></svg>
                <div>
                    @Model.successMessage
                </div>
            </div>
        }

        @if (Model.errorMessage != null)
        {
            <div class="alert alert-danger d-flex align-items-center" role="alert">
                <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                <div>
                    @Model.errorMessage
                </div>
            </div>
        }
    </div>

    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Trans.tid" />
                <div class="form-group">
                    <label asp-for="Trans.tname" class="control-label"></label>
                    <input asp-for="Trans.tname" class="form-control" />
                    <span asp-validation-for="Trans.tname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Trans.send_pname" class="control-label"></label>
                    <input asp-for="Trans.send_pname" class="form-control" />
                    <span asp-validation-for="Trans.send_pname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Trans.recieve_pname" class="control-label"></label>
                    <input asp-for="Trans.recieve_pname" class="form-control" />
                    <span asp-validation-for="Trans.recieve_pname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Trans.amount" class="control-label"></label>
                    <input asp-for="Trans.amount" class="form-control" />
                    <span asp-validation-for="Trans.amount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Trans.t_date" class="control-label"></label>
                    <input asp-for="Trans.t_date" class="form-control" />
                    <span asp-validation-for="Trans.t_date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>