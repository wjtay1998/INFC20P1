@page
@model INFC20P1.Pages.AddPModel
@{
}


<div class="px-4">
    <div class="text-center">
        <h1 class="display-4">PayTrack</h1>
        <p>Add your friends in!</p>
    </div>
</div>

<div class="px-4 py-2">
    <div class="row">
        <div class="col-md-4">
            
        </div>

        <div class="col-md-4">
            @if(Model.successMessage != null){
                <div class="alert alert-success d-flex align-items-center" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill" /></svg>
                    <div>
                        @Model.successMessage
                    </div>
                </div>
            }
            
            @if(Model.errorMessage != null){
                <div class="alert alert-danger d-flex align-items-center" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                    <div>
                        @Model.errorMessage
                    </div>
                </div>
            }
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Person.pname" class="control-label"></label>
                    <input asp-for="Person.pname" class="form-control" />
                    <span asp-validation-for="Person.pname" class="text-danger"></span>
                </div>
                <div class="form-group py-2">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>

        <div class="col-md-4">
        </div>
    </div>
</div>