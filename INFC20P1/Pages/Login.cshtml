@page
@model INFC20P1.Pages.LoginModel
@{
}

<body>
    <div class="container">
        <div class="jumbotron center-screen">
            <h3>
                PayTrack
            </h3>
            <form method="post" style="justify-content:center;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label><strong>USERNAME</strong></label>
                    <input asp-for="user.pname" class="form-control" id="usernameInput" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="row justify-content-center pb-3 pt-3">
                        <div class="col-6">
                            <input type="submit" asp-page-handler="login" value="LOGIN" class="btn btn-danger btn-block" />
                        </div>
                    </div>

                </div>
                <div class="row justify-content-center pb-3 pt-3">
                    <div class="text-danger">
                        <span><b>@Model.errorMessage</b></span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>